  <div class="form-group">
  <%= form_for @restaurant, :html => {:multipart => true} do |f| %>
  <%=f.label :name, "Restaurant Name"%>
  <%=f.text_field :name, class: "form-control form-text text-muted", placeholder:"Restaurant name"%>
  </div>
  <div class="form-group">
    <%=f.label :description%>
    <%=f.text_area :description, class:"form-control", rows:"3"%>
  </div>
  <div class="form-group">
   <%=f.label :avatar, "Restaurant Logo"%>
   <%=f.file_field :avatar, class:"form-control-file"%> 
  </div>
  <fieldset class="form-group">
    <legend><label style="color:#51657E;">Support Pop-Ups</label></legend>
  </fieldset>
  <div class="form-check">
    <label class="form-check-label">
      <input type="checkbox" class="form-check-input">
      Would you like to also sponser other pop-ups?
    </label>
  </div>
  <%=f.submit "Submit", class:"btn btn-primary"%>

<%end%>
