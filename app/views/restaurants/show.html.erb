<section id="about" class="container content-section text-center">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <h1 style="color:white;"><%=@restaurant.name%></h1>
          <p><%=default_image%></p>
            <h6>Event Time: <%=@restaurant.event_time %></h6>
              <h6> There is <%=@restaurant.availability%> Get Tickets </h6>   
                <h5>Event Description</h5><br>
                  <div class="border_wrapper">
                    <p><%=@restaurant.description%></p> 
                        <label>Likes:<div class="numberCircle text-center"><%=@restaurant.votes.count%></div></label>
                              <label>Donations:<div class="numberCircle text-center"><%=@restaurant.donations.count%>   </div></label>
                            </div>
                        <%=render "votes/votes_form"%>
                        <%=render "donations/donations_form"%>

                        <%=link_to "See Comment", restaurant_comment_url(@restaurant.comments),class:"btn btn-primary btn-lg btn-block"%>
                        <%=link_to "Comment", new_restaurant_comment_url(@restaurant), class:"btn btn-primary btn-lg btn-block"%>
                        <%= link_to "More infomation of the diner", more_info_restaurant_url, :method => :get, class:"btn btn-primary btn-lg btn-block"%>

                      </div>
                    </div>
                  </section>
                <%=render "restaurants/show_map"%>
