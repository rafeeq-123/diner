<!DOCTYPE html>
<html>
  <head>
    <title>The Pop-Up Diner</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload'%>
    <link href="https://blackrockdigital.github.io/startbootstrap-grayscale/css/grayscale.min.css" rel="stylesheet">
  </head>
 
  <header class="intro">
        <div class="intro-body">
            <div class="container">
                <div class="row">
                    <div class="col-md-8 col-md-offset-2">
                        <h1 class="brand-heading">The Pop-Up Diner</h1>
            
                        <a href="#about" class="btn btn-circle page-scroll">
                            <i class="fa fa-angle-double-down animated"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

 <body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">
  <nav class="navbar navbar-custom navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-main-collapse">
                    Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand page-scroll" href="#page-top">
                    <i class="fa fa-play-circle"></i> <span class="light">The Pop-Up Diner</span> 
                </a>
            </div>


            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
                <ul class="nav navbar-nav">
                    <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
                    <li class="hidden active">
                        <a href="#page-top"></a>

                       </li>
                           <li class="">
                              <a <%= link_to "Home", welcome_index_url, :class => "page-scroll"%> </a>  
                                 </li>
                                    <li class="">
                                       <%if user_signed_in?%>
                                            <a <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => "page-scroll"%></a>  
                                        <%else%>
                                     </li>
                                  <li class="">
                                <a <%= link_to "Login", user_session_path, :class => "page-scroll"%> </a>  
                              </li>
                          <%end%>
                         <li class="">
                        <a <%= link_to "New",new_restaurant_path, :class => "page-scroll"%></a>  
                      </li>
                     <li class="">
                      <a <%= link_to "Find", restaurants_url, :class => "page-scroll"%></a>  
                  </li>  
                  <li class="">
                      <a <%= link_to "User Stats", restaurants_user_stats_url, :class => "page-scroll"%></a>  
                  </li>           
                </ul>
            </div>
              <div class="row">
                 <div class="col-xs-10 col-xs-offset-1">
                      <% flash.each do |alert_type, msg| %>
                          <% if alert_type == "notice" %>
                             <div class="alert alert-success">
                                <% elsif alert_type == "alert" %>
                                  <div class="alert alert-danger">
                                    <% else %>
                               <div class="alert-dismissible<%= "#{alert_type}"%>" >
                              <% end %>
                           <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <ul>
                      <li>
                   <%= msg %>
                 </li>
              </ul>
          <% end %>
         </div>
      </div>
     </div>
    </div>
    </div>
        <!-- /.container -->
    </nav>

    <%= yield %>
    <footer>
        <div class="container text-center navbar-fixed-bottom">
            <p>Copyright Â© Rafeeq Wilson 2016</p>
        </div>
    </footer>
  </body>
</html>
